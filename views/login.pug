doctype html

form(method='POST')
        label(for='email') email
        input.form-control#email(type='text' name='email' placeholder='abc@def.com')
        label(for='password') password
        input.form-control#password(type='password' name='password' placeholder='********')
        a.btn.btn-danger.btn-lg(href='/') Cancel
        input.btn.btn-success.btn-lg(type='submit' value='Submit')
